<%= render 'client/design/design1/layouts/header' %>
<div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">About
                        <strong><%= @info['name'] if @info.has_key?('name')%> </strong>
                    </h2>
                    <hr>
                </div>
                <div class="col-md-6">
                    <% if @info.has_key?('cover') %>
                        <img class="img-responsive img-border-left" src="<%= @info['cover']['source'] if @info['cover'].has_key?('source') %>" alt="<%= @info['name'] if @info.has_key?('name') %>">
                    <% end %>
                </div>
                <div class="col-md-6">

                    <p><%= @info['about'] if @info.has_key?('about')%></p>
                    <p><%= @info['description'] if @info.has_key?('description')%></p>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>

    </div>
<%= render 'client/design/design1/layouts/footer' %>
