<%= render 'client/design/design1/layouts/header' %>
<div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center"><%= @info['name'] if @info.has_key?('name')%>
                        <strong>News</strong>
                    </h2>
                    <hr>
                </div>
                <% @news.each do |key, value| %>
                  <div class="col-lg-12 text-center">
                      <img class="img-responsive img-border img-full" src="<%= key['picture'] if key.has_key? 'picture'%>" alt="">
                      <p>
                        <%= key['message'] if key.has_key? 'message'  %>
                        <%= key['story'] if key.has_key? 'story'  %>
                      </p>

                      <hr>
                  </div>
               <% end %>

                <div class="col-lg-12 text-center">
                    <ul class="pager">
                        <li class="previous"><a href="#">&larr; Older</a>
                        </li>
                        <li class="next"><a href="#">Newer &rarr;</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

    </div>
<%= render 'client/design/design1/layouts/footer' %>
